@using System.Data
@using System.Data.SqlClient
@using System.Configuration
@{
    ViewBag.Title = "Update Manage Category";
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<div class="card">
    <div class="card-body p-4">
        <h5 class="card-title">@ViewBag.Title</h5>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                <strong>Success : </strong> @TempData["Message"]
            </div>
        }
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger">
                <strong>Error : </strong>@TempData["Message"]
            </div>
        }
        <hr />
        <div class="form-body mt-4">
            <div class="row">
                <div class="col-lg-12">

                    <form method="post" action="~/Category/Update_Manage_Category" enctype="multipart/form-data">
                        @{
                            foreach (DataRow row in Model.Rows)
                            {
                                @Html.AntiForgeryToken()
                                <input type="hidden" value="@row["catId"]" name="id" />
                                <div class="border border-3 p-4 rounded">
                                    <div class="mb-3">
                                        <label for="inputProductTitle" class="form-label">Category Title</label>
                                        <input type="text" class="form-control" id="inputProductTitle" placeholder="Enter Category Title" name="category" value="@row["catName"]">
                                    </div>
                                    <div class="mb-3">
                                        <label for="inputProductDescription" class="form-label">Category Images</label>
                                        <input id="image-uploadify" type="file" accept=".jpg,.jpeg,.png,.webp,.svg,.gif,.apng,.avif,.jfif,.pjpeg,.pjp" name="file" multiple>
                                        <input type="hidden" name="imageUrl" value="/Upload/Category/@row["catImage"].ToString()" />
                                        <img src="~/Upload/Category/@row["catImage"]" style="height:100px" />
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">Save Category</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </form>

                </div>

            </div><!--end row-->
        </div>
    </div>
</div>


